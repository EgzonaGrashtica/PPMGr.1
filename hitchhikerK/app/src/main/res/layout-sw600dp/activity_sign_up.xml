<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="619dp"
        android:layout_height="761dp"
        android:layout_centerInParent="true"
        android:background="@drawable/et_style"
        android:backgroundTint="@color/colorPrimary"
        tools:context=".activities.SignUpActivity"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="54dp">


        <EditText
            android:id="@+id/etName"
            android:layout_width="380dp"
            android:layout_height="60dp"
            android:layout_marginStart="105dp"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="105dp"
            android:background="@drawable/et_style"
            android:cursorVisible="true"
            android:ems="10"
            android:hint="@string/phName"
            android:imeOptions="actionNext"
            android:inputType="textPersonName"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView9" />

        <EditText
            android:id="@+id/etSurname"
            android:layout_width="380dp"
            android:layout_height="60dp"
            android:layout_marginStart="105dp"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="105dp"
            android:background="@drawable/et_style"
            android:cursorVisible="true"
            android:ems="10"
            android:hint="@string/phSurname"
            android:imeOptions="actionNext"
            android:inputType="textPersonName"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etName" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="380dp"
            android:layout_height="60dp"
            android:layout_marginStart="105dp"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="105dp"
            android:background="@drawable/et_style"
            android:cursorVisible="true"
            android:ems="10"
            android:hint="@string/phEmail"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etSurname" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="380dp"
            android:layout_height="60dp"
            android:layout_marginStart="105dp"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="105dp"
            android:background="@drawable/et_style"
            android:cursorVisible="true"
            android:ems="10"
            android:hint="@string/phPassword"
            android:imeOptions="actionNext"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etEmail" />

        <EditText
            android:id="@+id/etConfirmPassword"
            android:layout_width="380dp"
            android:layout_height="60dp"
            android:layout_marginStart="105dp"

            android:layout_marginTop="22dp"
            android:layout_marginEnd="105dp"
            android:background="@drawable/et_style"
            android:cursorVisible="true"
            android:ems="10"
            android:hint="@string/phConfirmPassword"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etPassword" />

        <Button
            android:id="@+id/btnSingUp"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="185dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="185dp"
            android:background="@drawable/button"
            android:onClick="@string/btnSignUpFunc"
            android:text="@string/btnSignUpTxt"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etConfirmPassword" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="294dp"
            android:layout_height="196dp"
            android:layout_marginStart="148dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="148dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/sign_up" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="115dp"
        android:layout_height="95dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:backgroundTint="@color/colorAccent"
        app:srcCompat="@drawable/ic_arrow_back_white_18pt_3x" />

</RelativeLayout>
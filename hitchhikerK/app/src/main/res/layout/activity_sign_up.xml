<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="350dp"
        android:layout_height="650dp"
        android:layout_centerInParent="true"
        android:background="@drawable/et_style"
        android:backgroundTint="#FFFFFF"
        tools:context=".SignUpActivity">

        <EditText
            android:id="@+id/etName"
            android:layout_width="317dp"
            android:layout_height="50dp"
            android:layout_marginStart="47dp"
            android:layout_marginTop="90dp"
            android:layout_marginEnd="47dp"
            android:background="@drawable/et_style"
            android:ems="10"
            android:hint="@string/phName"
            android:inputType="textPersonName"
            android:paddingLeft="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/etSurname"
            android:layout_width="317dp"
            android:layout_height="50dp"
            android:layout_marginStart="47dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="47dp"
            android:background="@drawable/et_style"
            android:ems="10"
            android:hint="@string/phSurname"
            android:inputType="textPersonName"
            android:paddingLeft="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etName" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="317dp"
            android:layout_height="50dp"
            android:layout_marginStart="47dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="47dp"
            android:background="@drawable/et_style"
            android:ems="10"
            android:hint="@string/phEmail"
            android:inputType="textEmailAddress"
            android:paddingLeft="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.508"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etSurname" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="317dp"
            android:layout_height="50dp"
            android:layout_marginStart="47dp"
            android:layout_marginTop="33dp"
            android:layout_marginEnd="47dp"
            android:background="@drawable/et_style"
            android:ems="10"
            android:hint="@string/phPassword"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etEmail" />


        <EditText
            android:id="@+id/etConfirmPassword"
            android:layout_width="317dp"
            android:layout_height="50dp"
            android:layout_marginStart="47dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="47dp"
            android:background="@drawable/et_style"
            android:ems="10"

            android:hint="@string/phConfirmPassword"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etPassword" />

        <Button
            android:id="@+id/btnSingUp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="47dp"
            android:layout_marginTop="49dp"
            android:layout_marginEnd="47dp"
            android:layout_marginBottom="86dp"
            android:background="@drawable/button"
            android:onClick="@string/btnSignUpFunc"
            android:text="@string/btnSignUpTxt"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etConfirmPassword" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>
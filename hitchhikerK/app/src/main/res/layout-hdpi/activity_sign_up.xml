<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="270dp"
        android:layout_height="480dp"
        android:layout_centerInParent="true"
        android:background="@drawable/et_style"
        android:backgroundTint="@color/colorPrimary"
        tools:context=".activities.SignUpActivity"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="54dp">


        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:backgroundTint="@color/colorPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_arrow_back_18pt_2x" />

        <EditText
            android:id="@+id/etName"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="17dp"
            android:background="@drawable/et_style"
            android:cursorVisible="true"
            android:ems="10"
            android:hint="@string/phName"
            android:imeOptions="actionNext"
            android:inputType="textPersonName"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView9" />

        <EditText
            android:id="@+id/etSurname"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="17dp"
            android:background="@drawable/et_style"
            android:cursorVisible="true"
            android:ems="10"
            android:hint="@string/phSurname"
            android:imeOptions="actionNext"
            android:inputType="textPersonName"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etName" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="17dp"
            android:background="@drawable/et_style"
            android:contextClickable="true"
            android:ems="10"
            android:hint="@string/phEmail"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etSurname" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="17dp"
            android:background="@drawable/et_style"
            android:contextClickable="true"
            android:ems="10"
            android:hint="@string/phPassword"
            android:imeOptions="actionNext"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etEmail" />

        <EditText
            android:id="@+id/etConfirmPassword"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="22dp"

            android:layout_marginEnd="17dp"
            android:background="@drawable/et_style"
            android:cursorVisible="true"
            android:ems="10"
            android:hint="@string/phConfirmPassword"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etPassword" />

        <Button
            android:id="@+id/btnSingUp"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="47dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="47dp"
            android:background="@drawable/button"
            android:onClick="@string/btnSignUpFunc"
            android:text="@string/btnSignUpTxt"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etConfirmPassword" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="161dp"
            android:layout_height="81dp"
            android:layout_marginStart="69dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="69dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/sign_up" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>